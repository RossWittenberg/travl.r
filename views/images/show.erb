<div class="big_image">
	<img src="<%= @image.img_url %>">
</div>
<br/>


<% @countries.each do |country| %>
	<% if country.id == @image.country_id %>
		<a href="/countries/<%= country.id %>"><h3><%= country.name %></h3></a>
	<% end %>
<% end %>			

<% @microposts.each do |micropost| %>
	<% if micropost.id == @image.micropost_id %>
		<a href="/microposts/<%= micropost.id %>"><h3><%= micropost.title %></h3></a>		
	<% end %>
<% end %>	



