<h2>tags</h2>

<% @tags.each do |tag| %>
	<div class="tags"><li><a href="/tags/<%= tag.id %>"><%= tag.name %></a></li>
<% end %></div>

<br/>

<h3>add a new tag</h3>

<br/>

<form action="/tags" method="POST">
	<label for="title">tag<br/>
		<input type="text" value ="enter new tag" name="tag[name]">
	</label>
	
	<button> + tag </button>
</form>

<br/>
<br/>

<form action=<% @tags.each do |tag| %>
				"/tags/remove_tag/<%= tag.id %>"
			<% end %> method="POST">	
	<input type="hidden" name="_method" value="DELETE">
		<select name="tag[id]">
			<% @tags.each do |tag| %>
				<option value="<%= tag.id %>"><%= tag.name %></option>
			<% end %>
		</select>

	<button> remove tag </button>

</form>	
